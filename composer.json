{
  "name": "fi1a/fi1a.usersettings",
  "type": "bitrix-d7-module",
  "description": "Модуль 1С-Битрикс \"Пользовательские настройки\". Предоставляет страницу с пользовательскими настройками сайта.",
  "keywords": [],
  "homepage": "https://github.com/fi1a/fi1a.usersettings",
  "license": "MIT",
  "authors": [
    {
      "name": "Nikolay Gorohovsky",
      "email": "fi1a@icloud.com"
    }
  ],
  "require": {
    "php": "^7.3 || ^8.0",
    "composer/installers": "~1",
    "fi1a/collection": ">=1.1.0 <1.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3",
    "slevomat/coding-standard": "^6.3",
    "squizlabs/php_codesniffer": "^3.5",
    "vlucas/phpdotenv": "^5.2.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Fi1a\\Unit\\UserSettings\\": "tests"
    }
  },
  "scripts": {
    "fl:lint": "phpcs --cache=build/cache/phpcs.cache --ignore=tests/autoload.php",
    "fl:phpcbf": "phpcbf --cache=build/cache/phpcs.cache"
  },
  "scripts-descriptions": {
    "fl:lint": "Проверяет весь исходный код на соответсвие стандартам.",
    "fl:phpcbf": "Поправляет весь исходный код на соответсвие стандартам."
  }
}